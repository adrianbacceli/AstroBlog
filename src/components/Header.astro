---
const nav = [{ href: '/', label: 'Blog' }, { href: '/about', label: 'About' }];
---
<header class="container border" style="padding-top:1.25rem">
  <div style="display:flex; align-items:center; justify-content:space-between;">
    <a href="/" style="font-weight:900; letter-spacing:.3px; font-size:1.1rem; color:var(--fg)">Adrian Â· Security</a>
    <nav style="display:flex; gap:1rem; align-items:center;">
      {nav.map(n => <a href={n.href}>{n.label}</a>)}
      <button class="btn" id="theme">Toggle</button>
    </nav>
  </div>
</header>

<script is:inline>
  const KEY='theme', root=document.documentElement;
  const load = () => localStorage.getItem(KEY) || (matchMedia('(prefers-color-scheme: light)').matches ? 'light':'dark');
  const set = t => root.setAttribute('data-theme', t);
  let t = load(); set(t);
  document.addEventListener('click', e => { if (!e.target.closest('#theme')) return;
    t = (t==='dark'?'light':'dark'); set(t); localStorage.setItem(KEY,t); });
</script>
